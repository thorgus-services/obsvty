# OTLP gRPC Server Configuration
# 
# Environment variables for configuring the OTLP gRPC server following the
# principles of environment-based configuration management and Hexagonal Architecture.

# Host address for the gRPC server to bind to
# Default: localhost
OTLP_HOST=localhost

# Port number for the gRPC server (default: 4317 for OTLP)
# Must be between 1 and 65535
# Default: 4317
OTLP_PORT=4317

# Maximum message size in bytes that the server will accept
# Default: 4194304 (4MB)
OTLP_MAX_MESSAGE_LENGTH=4194304

# Maximum size of the trace buffer
# Default: 1000
OTLP_BUFFER_MAX_SIZE=1000

# Logging level configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# For backward compatibility with existing adapter
# These variables use the _GRPC_ prefix as specified in the original config
OTLP_GRPC_HOST=0.0.0.0
OTLP_GRPC_PORT=4317
OTLP_GRPC_MAX_BUFFER_SIZE=10000
OTLP_GRPC_MAX_MESSAGE_LENGTH=4194304
OTLP_GRPC_ENABLE_REFLECTION=false
OTLP_GRPC_ENABLE_LOGS_SERVICE=false